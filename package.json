{
  "name": "system",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "repository": "https://github.com/BiloCode/School-Management-System.git",
  "author": "BiloCode <billy_paredes_aycho@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "dev:native" : "lerna exec --scope @system/nativeapp -- yarn dev:native",
    "dev:web" : "lerna exec --scope @system/nativeapp -- yarn dev:web",
    "test:native" : "lerna exec --scope @system/nativeapp -- yarn test:native",
    "test:web" : "lerna exec --scope @system/nativeapp -- yarn test:web",
    "dev:server": "lerna exec --scope @system/server -- yarn dev",
    "build:android": "lerna exec --scope @system/nativeapp -- yarn build:android",
    "build:web": "lerna exec --scope @system/nativeapp -- yarn build:web",
    "test:server": "lerna exec --scope @system/server -- yarn test:watch",
    "build:server": "lerna exec --scope @system/server -- yarn build",
    "postinstall": "husky install",
    "lint": "eslint packages/**",
    "lint:fix": "eslint packages/** --fix"
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "husky": "^6.0.0"
  }
}
