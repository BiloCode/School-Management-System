{
  "compilerOptions": {
    "target": "es5",             
    "module": "ES6",
    "types": [ "@types/jest" ],           
    "allowJs": true,                     
    "checkJs": false,                    
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "strict": true,                  
    "moduleResolution": "node",      
    "esModuleInterop": true,         
    "skipLibCheck": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
