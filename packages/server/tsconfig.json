{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@mocks/*" : ["__mocks__/*"],
      "@controllers/*" : ["api/controllers/*"],
      "@middlewares/*" : ["api/middlewares/*"],
      "@routes/*" : ["api/routes/*"],
      "@config/*" : ["config/*"],
      "@api" : ["api/index.ts"],
      "@types/*" : ["app/types/*"],
      "@interfaces/*" : ["app/interfaces/*"],
      "@services/*" : ["app/services/*"],
      "@utils/*" : ["app/utils/*"],
      "@models/*" : ["app/models/*"]
    },
    "target": "es6",
    "module": "CommonJS",
    "types": [ "@types/jest" ],           
    "allowJs": true,                     
    "checkJs": true,                    
    "rootDir": "./src",
    "removeComments": true,
    "outDir": "./build",
    "strict": true,                  
    "moduleResolution": "node",      
    "esModuleInterop": true,         
    "skipLibCheck": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "traceResolution": true,
    "resolveJsonModule" : true,
    "strictPropertyInitialization" : false,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
