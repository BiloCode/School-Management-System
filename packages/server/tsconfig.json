{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@__mocks__/*" : ["__mocks__/*"],
      "@controllers/*" : ["api/controllers/*"],
      "@middlewares/*" : ["api/middlewares/*"],
      "@routes/*" : ["api/routes/*"],
      "@interfaces/*" : ["interfaces/*"],
      "@services/*" : ["services/*"],
      "@types/*" : ["types/*"],
      "@config/*" : ["config/*"],
      "@api" : ["api/index.ts"]
    },
    "target": "es6",
    "module": "CommonJS",
    "types": [ "@types/jest" ],           
    "allowJs": true,                     
    "checkJs": true,                    
    "rootDir": "./src",
    "removeComments": true,
    "outDir": "./build",
    "strict": true,                  
    "moduleResolution": "node",      
    "esModuleInterop": true,         
    "skipLibCheck": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "traceResolution": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
