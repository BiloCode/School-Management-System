{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*" : ["*"]
    },
    "target": "es6",
    "module": "CommonJS",
    "types": [ "@types/jest" ],           
    "allowJs": true,                     
    "checkJs": true,                    
    "rootDir": "./src",
    "removeComments": true,
    "outDir": "./build",
    "strict": true,                  
    "moduleResolution": "node",      
    "esModuleInterop": true,         
    "skipLibCheck": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "traceResolution": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
