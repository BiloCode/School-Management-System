{
  "root": true,
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parseOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["prettier"],
  "plugins": ["prettier", "@typescript-eslint", "import"],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
