{
  "root": true,
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["prettier", "plugin:@typescript-eslint/recommended", "airbnb"],
  "plugins": [
    "prettier",
    "react",
    "react-hooks",
    "import",
    "@typescript-eslint"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "ts": "never",
        "js": "never"
      }
    ],
    "max-len": "off",
    "import/prefer-default-export": "off",
    "react/require-default-props": "off",
    "no-alert": "off",
    "no-console": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "packages/*/tsconfig.json"
      }
    }
  }
}
